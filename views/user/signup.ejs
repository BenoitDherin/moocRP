<form action="/user/create" method="POST" class="form-signin">
	<h2 class="form-signin-heading">Researcher Signup Form</h2>


	<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
	</ul>
	<% } %>

	First Name: <input type="text" class="form-control" placeholder="first name" name="first_name">
	Last Name: <input type="text" class="form-control" placeholder="last name" name="last_name">
	Email: <input type="email" class="form-control" placeholder="email address" name="email">
	Password: <input type="password" class="form-control" placeholder="password" name="password">
	Confirm password: <input type="password" class="form-control" placeholder="password confirmation" name="confirmation">
	<br>

	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Create">
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>