<div class="mini-banner auto">
	<div class="container">
		<h2>Analytics</h2>
	</div>
</div>
<div class="sub-banner">
	<div class="container">
			<h2 id="step">Step 1: Choose your analytics visualization.</h2>
			<div class="progress">
			  <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
			    <span class="sr-only">0%</span>
			  </div>
			</div>
	</div>
</div>
<div class="container wrapper">
	<div class="row">
		<div class="col-md-8">
			<h3>Visualizations</h3>
			<form action="/analytics/display">
				<table class='table table-striped table-hover'>
					<tr>
						<th>Visualization</th>
						<th>Author</th>
						<th>Datasets</th>
						<th></th>
					</tr>
					<% _.each(visualizations, function(visualization) {%>
						<% if (visualization.approved) { %>
							<% var author = null %>
							<% for (i = 0; i < users.length; i++) { %>
								<% if (visualization.userID == users[i].id) author = users[i]; %>
							<% } %>
							<tr>
								<td><%= visualization.name %></td>
								<td><%= author.firstName %> <%= author.lastName %></td>
								<td>
									<select>
										<option value="option1">Option #1</option>
										<option value="option2">Option #2</option>
										<option value="option3">Option #3</option>
										<option value="option4">Option #4</option>
									</select>
								</td>
								<td><a class="btn btn-sm btn-primary" href="/analytics/datasets">Select</a></td>
							</tr>
						<% } %>
					<% }); %>
				</table>
			</form>
		</div>
		<div class="col-md-4">
		<h3>Preview Pane</h3>
		</div>
	</div>
</div>
